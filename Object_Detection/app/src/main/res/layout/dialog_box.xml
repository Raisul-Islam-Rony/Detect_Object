<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:paddingTop="10dp"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/Storage_Button"
        android:layout_width="254dp"
        android:layout_height="43dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#EC5252"
        android:text="Storage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Real_Time_Button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="328dp"
        android:layout_height="32dp"
        android:layout_marginTop="31dp"
        android:text="Select Method To Continue"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Real_Time_Button"
        android:layout_width="257dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#EC5252"
        android:text="Real Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>